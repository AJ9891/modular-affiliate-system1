{
  "name": "modular-affiliate-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy": "npm run build && vercel --prod",
    "deploy:preview": "npm run build && vercel",
    "web": "npm run dev --workspace=apps/web",
    "admin": "npm run dev --workspace=apps/admin",
    "renderer": "npm run dev --workspace=apps/renderer"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
